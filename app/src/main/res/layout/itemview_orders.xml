<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="6.50dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="13.00dp"
            android:orientation="vertical">

<LinearLayout
    android:id="@+id/llOrderDate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6.50dp"
    android:layout_marginBottom="6.50dp"
    android:orientation="horizontal"
    android:weightSum="1">


    <TextView
        android:id="@+id/tvOrderDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.70"
        android:textStyle="bold"
        android:text="10-11-2000"
        android:textColor="#D32F2F"
        android:textSize="16.90dp"/>


    <TextView
        android:id="@+id/tvOrderStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.30"
        android:background="@drawable/deliver_btn"
        android:backgroundTint="@color/green"
        android:text="Delivered"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="16.90dp"/>

</LinearLayout>


            <LinearLayout
                android:id="@+id/llAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.50dp"
                android:layout_marginBottom="6.50dp"
                android:orientation="horizontal"
                android:weightSum="1">
                
                
                <TextView
                    android:id="@+id/tvOrderTitles"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.75"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="Vegetables and fruits , Dairy and Breakfast, Cold Drinks and Juice"
                    android:textColor="@color/black"
                    android:textSize="16.90dp"/>


                <TextView
                    android:id="@+id/tvOrderAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:layout_gravity="center_vertical"
                    android:gravity = "center"
                    android:textStyle="bold"
                    android:text="â‚¹890"
                    android:textColor="@color/green"
                    android:textSize="16.90dp"
                    tools:ignore="Suspicious0dp" />


            </LinearLayout>


        </LinearLayout>





    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>